<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6 rounded-container">
      <h2 class="mt-3">Update your flat</h2>
      <%= simple_form_for(@flat) do |f| %>
        <%= f.input :title %>
        <%= f.input :address %>
        <%= f.input :description, as: :text %>
        <%= f.input :availability_start, as: :string, input_html: {class: "datepicker"} %>
        <%= f.input :availability_end, as: :string, input_html: {class: "datepicker"} %>
        <%= f.input :price_per_day %>
        <%= f.input :number_of_guests %>
        <%= f.input :amenities, as: :check_boxes, collection: Flat::AMENITIES, input_html: { multiple: true } %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit "Update", class: "btn blue-btn" %>
      <% end %>
      <%= link_to "Back to dashboard", dashboard_flats_path, class: "btn lavander-btn mt-3" %>
    </div>
  </div>
</div>
